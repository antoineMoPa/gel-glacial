{
    "manifest_version": 2,
    "name": "Gel-Glacial",
    "description": "Pour améliorer le site de Génie Élec-Info",
    "version": "0.0.2",
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [{
        "matches": ["*://www.gel.usherbrooke.ca/*"],
        "js": ["metadata/Addons.js", "main.js"],
        "all_frames": true,
        "css": ["style.css"]
    }],
    "web_accessible_resources": [
        "addons/*",
        "lib/*"
    ]
}
